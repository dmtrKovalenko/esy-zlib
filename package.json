{
  "name": "esy-zlib",
  "version": "1.2.11000",
  "description": "zlib packaged for esy",
  "esy": {
    "exportedEnv": {
      "CFLAGS": {
        "scope": "global",
        "val": "-I#{self.install / 'include'} $CFLAGS"
      },
      "LDFLAGS": {
        "scope": "global",
        "val": "-L#{self.lib} $LDFLAGS"
      },
      "exportedEnv": {
        "PKG_CONFIG_PATH": {
          "scope": "global",
          "val": "#{self.lib / 'pkgconfig' : $PKG_CONFIG_PATH }"
        }
      }
    },
    "buildEnv": {
      "CHOST": "#{os == 'windows' ? 'x86_64-w64-mingw32': '' }"
    },
    "buildsInSource": true,
    "build": [
      ["bash", "-c", "#{os == 'windows' ? './configure --prefix=$cur__install --uname=cygwin': './configure --prefix=$cur__install' }"],
      "make",
      "make test"
    ],
    "install": [
      "make install"
    ]
  }
}
